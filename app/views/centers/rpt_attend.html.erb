<!-- Report lists all handoffs (pickups and dropoffs) for each child. The child is dropped from the report if no handoffs are on record. -->

<% Time.zone = 'America/New_York' %>
<div class="title_center"> 
	<h2> Attendance </h2>
</div>
<br>
<div class="reports">

	<% @children.each do |child| %>
		 <% if child.handoffs.length != 0 %>
			<div id="attend_rpt">
			<%= child.fname %>
			<%= child.mname %>
			<%= child.lname %>
			</div>
			<br>
			<% child.handoffs.each do |handoff| %>
				<%= handoff.attend %>
				<%= ":" %>
				<%= handoff.created_at.strftime("%d %b. %Y - %H:%M")  %><br>
			<% end %>
		    <br>
		 <% end %>
	<% end %>
</div>
<br><br>
<div class="center_div">
	<%= button_to "Center Home", center_path(@center), class: 'button_c', method: :get %>
</div>